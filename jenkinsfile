pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Ricken000/cicd-demo-project'
            }
        }
        stage('Build') {
            steps {
                sh 'docker build -t my-image-test:latest .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker run -d -p 8080:3000 my-image-test:latest'
            }
        }
    }
}